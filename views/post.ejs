  <main>
    <section class="post-detail">
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
      <small><%= post.username %> - <%= new Date(post.created_at).toLocaleString('tr-TR') %></small>
      <form action="/report" method="POST" class="report-form">
        <input type="hidden" name="targetType" value="post">
        <input type="hidden" name="targetId" value="<%= post.id %>">
