      <form action="/comment" method="POST">
        <input type="hidden" name="postId" value="<%= post.id %>">
        <textarea name="content" placeholder="Yorumunuz" required maxlength="500"></textarea>
        <button type="submit">Yorum Yap</button>
      </form>
      <div class="comment-list">
        <% function renderComments(comments, parentId = null) { %>
          <% comments.filter(c => c.parent_id == parentId).forEach(comment => { %>
            <div class="comment">
              <p><%= comment.content %></p>
              <small><%= comment.username %> - <%= new Date(comment.created_at).toLocaleString('tr-TR') %></small>
              <form action="/report" method="POST" class="report-form">
                <input type="hidden" name="targetType" value="comment">
                <input type="hidden" name="targetId" value="<%= comment.id %>">
                <select name="reason" required>
